{
    "author":
    {
        "name": "Leonardo Pollini",
        "email": "leopollinik@gmail.com"
    },
    "version": "0.0.1",
    "autoupdate": false,

    "main_scripts_dir": "modules_enabled",
    "preload_scripts_dir": "preload_enabled",
    "scripts_lib_dir": "modules_disabled",
    "electron_package": "package.json",
    "log":
    {
        "log_level": "WARNING",
        "log_file": "log.log",
        "actions":
        {
            "theese are just some examples": "I cannot use comments in json :(",
            "send_mail": {},
            "close_terminal": {}
        }
    },

    "keyboard_config":
    {
        "enabled": true,
        "whitelist": false,
        "blacklist": [],
        "shortcuts":
        {
            "preload_scripts": [],
            "main_scripts": []
        }
    },
    "touchscreen_config": false,
    "mouse_config": 
    {
        "enabled": true,
        "remap_to_pointeraction": true,
        "actions":
        {
            "doubletouch":
            {
                "enabled": true,
                "doubletouch_radius": 20,
                "doubletouch_max_delay": 0.5,
                "preload_scripts": ["double-touch/double-touch.js"],
                "main_scripts": [],
                "events": {"dblclick": {}}
            },
            "long_press_leftclick":
            {
                "enabled": true,
                "time_delay": 0.5,
                "preload_scripts": ["long-press/long-press.js"],
                "main_scripts": [],
                "events": {"pointerdown": {}, "contextmenu": {}}
            }
        }
    },

    "fullscreen": true,
    "autostart": true,
    "autorestart": true,
    "autoreload": false,
    "start_script":
    {
        "enabled": true,
        "scripts": []
    },

    "toolbar":
    {
        "enabled": false,
        "hidden": false,
        "main_scripts": []
    },
    "only_one_webpage": true,
    "allow_navigation": true,

    "electron-api":
    {
        "enabled": true,
        "preload_scripts": ["electronAPIs-preload.js"],
        "main_scripts": ["electronAPIs.js"]
    },
    "extra_scripts":
    {
        "preload_scripts": [],
        "main_scripts": ["window-events"]
    },
    "startup_actions": []
}